# file options

--exclude .build, .git

# format options

--allman false                   # Use allman indentation style: "true" or "false" (default)
--binarygrouping 4,8             # Binary grouping,threshold (default: 4,8) or "none", "ignore"
--closingparen "balanced"        # Closing paren position: "balanced" (default) or "same-line"
--commas always                  # Commas in collection literals: "always" (default) or "inline"
--comments indent
--decimalgrouping 3,6            # Decimal grouping,threshold (default: 3,6) or "none", "ignore"
--elseposition same-line         # Placement of else/catch: "same-line" (default) or "next-line"
--empty void                     # How empty values are represented: "void" (default) or "tuple"
--exponentcase lowercase         # Case of 'e' in numbers: "lowercase" or "uppercase" (default)
--exponentgrouping disabled      # Group exponent digits: "enabled" or "disabled" (default)
--fractiongrouping disabled      # Group digits after '.': "enabled" or "disabled" (default)
--header ignore                  # Header comments: "strip", "ignore", or the text you wish use
--hexgrouping 4,8                # Hex grouping,threshold (default: 4,8) or "none", "ignore"
--hexliteralcase uppercase       # Casing for hex literals: "uppercase" (default) or "lowercase"
--ifdef indent                   # #if indenting: "indent" (default), "no-indent" or "outdent"
--importgrouping alphabetized    # "testable-top", "testable-bottom" or "alphabetized" (default)
--indent 4                       # Number of spaces to indent, or "tab" to use tabs
--indentcase false               # Indent cases inside a switch: "true" or "false" (default)
--linebreaks lf                  # Linebreak character to use: "cr", "crlf" or "lf" (default)
--maxwidth none                  # Maximum length of a line before wrapping. defaults to "none"
--octalgrouping 4,8              # Octal grouping,threshold (default: 4,8) or "none", "ignore"
--operatorfunc spaced            # Spacing for operator funcs: "spaced" (default) or "no-space"
--patternlet hoist               # let/var placement in patterns: "hoist" (default) or "inline"
--ranges spaced                  # Spacing for ranges: "spaced" (default) or "no-space"
--self insert                    # Explicit self: "insert", "remove" (default) or "init-only"
#--selfrequired                  # Comma-delimited list of functions with @autoclosure arguments
--semicolons inline              # Allow semicolons: "never" or "inline" (default)
--stripunusedargs closure-only   # "closure-only", "unnamed-only" or "always" (default)
--swiftversion 5.1               # 
--tabwidth 4                     # The width of a tab character. Defaults to "unspecified"
#--trailingclosures              # Comma-delimited list of functions that use trailing closures
--trimwhitespace always          # Trim trailing space: "always" (default) or "nonblank-lines"
--wraparguments before-first     # Wrap function args: "before-first", "after-first", "preserve"
--wrapcollections before-first   # Wrap array/dict: "before-first", "after-first", "preserve"
--xcodeindentation disabled      # Xcode indent guard/enum: "enabled" or "disabled" (default)

# rules
--rules indent, braces, isEmpty, redundantBreak, blankLinesAroundMark, blankLinesAtEndOfScope, blankLinesBetweenScopes, consecutiveBlankLines, consecutiveSpaces, duplicateImports, elseOnSameLine, leadingDelimiters, redundantBreak, redundantExtensionACL, redundantFileprivate, redundantGet, redundantInit, redundantLet, redundantNilInit, redundantObjc, redundantParens, redundantPattern, redundantRawValues, redundantReturn, redundantSelf, redundantVoidReturnType, semicolons, sortedImports, spaceAroundBraces, spaceAroundBrackets, spaceAroundComments, spaceAroundGenerics, spaceAroundOperators, spaceAroundParens, spaceInsideBraces, spaceInsideBrackets, specifiers, strongOutlets, strongifiedSelf, todos, void, wrapArguments, yodaConditions, trailingSpace
